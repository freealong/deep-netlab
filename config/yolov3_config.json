{
    "name": "yolov3-voc",
    "n_gpu": 1,

    "arch": {
        "type": "YoloV3",
        "args": {
            "params_cfg": "config/yolov3-voc.cfg"
        }
    },
    "data_loader": {
        "type": "VOCDataLoader",
        "args":{
            "data_dir": "data/voc/VOCdevkit",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.05,
            "num_workers": 4,
            "size": [416, 416],
            "augment": true,
            "image_sets": ["2007-trainval", "2012-trainval"]
        }
    },
    // if valid_data_loader is defined, we will use the config to build a valid_data_loader,
    // or we will build a valid_data_loader split from data_loader by its validation_split value
    "test_data_loader": {
        "type": "VOCDataLoader",
        "args":{
            "data_dir": "data/voc/VOCdevkit",
            "batch_size": 1,
            "shuffle": false,
            "num_workers": 2,
            "size": [416, 416],
            "augment": false,
            "image_sets": ["2007-test"]
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.001,
            "momentum": 0.9,
            "weight_decay": 5e-4
        }
    },
    "loss": "calculate_loss",
    "metrics": ["calculate_metric"
    ],
    "lr_scheduler": {
        "type":"MultiStepLR",
        "args":{
            "milestones": [160, 200, 240], // epoch
            "gamma":0.1
        }
    },
    "trainer": {
        "pretrained": "data/darknet53.conv.74.pth", // optional
        "epochs": 240,
        "save_dir": "saved/",
        "save_freq": 10,
        "validate_freq": 10,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved"
    }
}
