{
    "name": "SSD300",
    "n_gpu": 1,

    "arch": {
        "type": "SSD",
        "args": {
            "phase": "train",
            "params_cfg": "config/ssd300.json"
        }
    },
    "data_loader": {
        "type": "VOCDataLoader",
        "args":{
            "data_dir": "/mnt/datasets/voc/VOCdevkit",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2,
            "image_sets": ["2007-trainval", "2012-trainval"]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
